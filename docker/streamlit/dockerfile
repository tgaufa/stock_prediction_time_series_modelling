FROM python:3.11.2
WORKDIR /home
COPY ./requirements.txt ./
COPY ./st_dashboard.py ./
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get autoremove -y && \
    apt-get clean -y && \
    pip install --upgrade pip wheel streamlit && \
    pip install -r requirements.txt
EXPOSE 8501
CMD ["streamlit", "run", "src/st_dashboard.py"]
